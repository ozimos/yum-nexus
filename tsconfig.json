{
  "compilerOptions": {
    "target": "ES2019",
    "esModuleInterop": true,
    "module": "esnext",
    "lib": [
      "ESNEXT"
    ],
    "strict": false,    
    "rootDir": ".",

    "moduleResolution": "node",
    "plugins": [
      {
        "name": "nexus/typescript-language-service"
      }
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "api", "components", "pages", "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
